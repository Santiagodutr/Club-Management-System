---
interface Props {
  title?: string
}

const { title = 'Panel Admin - Club del Meta' } = Astro.props as Props
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        color-scheme: light;
        --color-primary: #0a4ba5;
        --color-surface: #0f172a;
        --color-bg: #0b1224;
        --color-panel: #111827;
        --color-card: #0f172a;
        --color-border: #1f2937;
        --color-text: #e5e7eb;
        --color-muted: #9ca3af;
        --color-accent: #22c55e;
      }

      * { box-sizing: border-box; }

      body {
        margin: 0;
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: var(--color-bg);
        color: var(--color-text);
      }

      a { color: inherit; text-decoration: none; }

      .layout {
        display: grid;
        grid-template-columns: 260px 1fr;
        min-height: 100vh;
        background: linear-gradient(160deg, #0b1224 0%, #0d1429 50%, #0a0f20 100%);
      }

      .sidebar {
        background: var(--color-surface);
        border-right: 1px solid var(--color-border);
        padding: 1.5rem 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        position: sticky;
        top: 0;
        height: 100vh;
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 700;
        letter-spacing: -0.02em;
      }

      .brand-badge {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        background: linear-gradient(135deg, #0a4ba5, #2563eb);
        display: grid;
        place-items: center;
        color: white;
        font-weight: 700;
      }

      nav {
        display: grid;
        gap: 0.35rem;
      }

      .nav-item {
        padding: 0.75rem 0.85rem;
        border-radius: 10px;
        color: var(--color-muted);
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.6rem;
        border: 1px solid transparent;
        transition: all 0.15s ease;
      }

      .nav-item:hover { color: var(--color-text); border-color: var(--color-border); background: rgba(255,255,255,0.02); }
      .nav-item.active { color: #fff; background: rgba(34,197,94,0.08); border-color: rgba(34,197,94,0.35); }

      .content {
        padding: 2rem 2.5rem;
      }

      @media (max-width: 900px) {
        .layout { grid-template-columns: 1fr; }
        .sidebar { position: relative; height: auto; flex-direction: row; align-items: center; }
        nav { grid-template-columns: repeat(auto-fit, minmax(120px, 1fr)); width: 100%; }
      }
    </style>
  </head>
  <body>
    <div class="layout">
      <aside class="sidebar">
        <div class="brand">
          <div class="brand-badge">CM</div>
          <div>
            <div>Club del Meta</div>
            <small style="color: var(--color-muted);">Panel Admin</small>
          </div>
        </div>
        <nav>
          <a class="nav-item active" href="/admin/panel">Reservas y salones</a>
          <a class="nav-item" href="/admin/login">Login</a>
        </nav>
      </aside>
      <main class="content">
        <slot />
      </main>
    </div>
  </body>
</html>
