---
import logoCorpmeta from '../assets/logo_corpmeta.png'
import faviconIco from '../assets/logo_corpmeta.ico'

interface Props {
  title?: string
  active?: 'reservas' | 'espacios' | 'reportes' | 'login' | 'eventos' | 'datos-empresa' | 'parametros' | 'socios'
}

const { title = 'Panel Admin - Club del Meta', active = 'reservas' } = Astro.props as Props
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href={faviconIco} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        color-scheme: light;
        --color-primary: #0a4ba5;
        --color-surface: #ffffff;
        --color-bg: #f6f7fb;
        --color-panel: #ffffff;
        --color-card: #ffffff;
        --color-border: #e5e7eb;
        --color-text: #111827;
        --color-muted: #6b7280;
        --color-accent: #22c55e;
      }

      * { box-sizing: border-box; }

      body {
        margin: 0;
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: var(--color-bg);
        color: var(--color-text);
      }

      a { color: inherit; text-decoration: none; }

      .layout {
        display: grid;
        grid-template-columns: 260px 1fr;
        min-height: 100vh;
        background: var(--color-bg);
      }

      .sidebar {
        background: #0a4ba5;
        border-right: 1px solid rgba(255,255,255,0.12);
        padding: 1.5rem 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        position: sticky;
        top: 0;
        height: 100vh;
        color: #e8eefc;
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 700;
        letter-spacing: -0.02em;
      }

      .brand-logo {
        width: 50px;
        height: 50px;
        object-fit: contain;
      }

      nav {
        display: grid;
        gap: 0.35rem;
      }

      .bottom-actions {
        display: grid;
        gap: 0.35rem;
        margin-top: auto;
        padding-top: 1rem;
        border-top: 1px solid rgba(255,255,255,0.12);
      }

      .nav-item {
        padding: 0.75rem 0.85rem;
        border-radius: 10px;
        color: #e8eefc;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.6rem;
        border: 1px solid transparent;
        transition: all 0.15s ease;
        background: none;
        cursor: pointer;
        font-size: 1rem;
        font-family: inherit;
        text-align: left;
        width: 100%;
      }

      .nav-item:hover { color: #fff; border-color: rgba(255,255,255,0.2); background: rgba(255,255,255,0.08); }
      .nav-item.active { color: #0a4ba5; background: #e8eefc; border-color: #dbeafe; }

      .content {
        padding: 2rem 2.5rem;
      }

      /* Bot贸n hamburguesa - oculto en desktop */
      .mobile-menu-btn {
        display: none;
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 1001;
        background: #0a4ba5;
        border: none;
        border-radius: 8px;
        padding: 0.75rem;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(10, 75, 165, 0.3);
        transition: all 0.2s ease;
      }

      .mobile-menu-btn:hover {
        background: #083d8a;
        transform: scale(1.05);
      }

      .mobile-menu-btn svg {
        display: block;
        width: 24px;
        height: 24px;
        stroke: white;
        stroke-width: 2;
        fill: none;
      }

      /* Overlay oscuro para m贸vil */
      .sidebar-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease, visibility 0.3s ease;
        pointer-events: none;
      }

      .sidebar-overlay.active {
        opacity: 1;
        visibility: visible;
        pointer-events: auto;
      }

      @media (max-width: 900px) {
        .mobile-menu-btn {
          display: block;
        }

        .layout { 
          grid-template-columns: 1fr; 
        }
        
        .sidebar { 
          position: fixed;
          top: 0;
          left: -100%;
          height: 100vh;
          width: 280px;
          max-width: 85vw;
          z-index: 1000;
          flex-direction: column;
          align-items: flex-start;
          padding: 1.5rem 1.25rem;
          transition: left 0.3s ease;
          overflow-y: auto;
          box-shadow: 4px 0 20px rgba(0, 0, 0, 0.15);
        }

        .sidebar.active {
          left: 0;
        }

        nav { 
          grid-template-columns: 1fr;
          width: 100%;
        }

        .bottom-actions { 
          width: 100%;
          margin-top: auto;
          border-top: 1px solid rgba(255,255,255,0.12);
          padding-top: 1rem;
          grid-template-columns: 1fr;
        }

        .content {
          padding: 5rem 1.5rem 2rem;
        }
      }

      @media (max-width: 640px) {
        .content {
          padding: 5rem 1rem 1.5rem;
        }

        .sidebar {
          width: 260px;
        }

        .brand {
          font-size: 0.95rem;
        }

        .brand-logo {
          width: 40px;
          height: 40px;
        }

        .nav-item {
          padding: 0.65rem 0.75rem;
          font-size: 0.95rem;
        }
      }
    </style>
  </head>
  <body>
    <!-- Bot贸n men煤 hamburguesa (m贸vil) -->
    <button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Men煤">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>

    <!-- Overlay oscuro -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <div class="layout">
      <aside class="sidebar" id="sidebar">
        <div class="brand">
          <img src={logoCorpmeta.src} alt="Club del Meta" class="brand-logo" />
          <div>
            <div>Club del Meta</div>
            <small style="color: var(--color-muted);">Panel Admin</small>
          </div>
        </div>
        <nav>
          <a class={`nav-item ${active === 'reservas' ? 'active' : ''}`} href="/admin/reservas">Reservas</a>
          <a class={`nav-item ${active === 'espacios' ? 'active' : ''}`} href="/admin/espacios">Espacios</a>
          <a class={`nav-item ${active === 'socios' ? 'active' : ''}`} href="/admin/socios">Socios</a>
          <a class={`nav-item ${active === 'eventos' ? 'active' : ''}`} href="/admin/eventos">Eventos</a>
          <a class={`nav-item ${active === 'reportes' ? 'active' : ''}`} href="/admin/reportes">Reportes</a>
          <a class={`nav-item ${active === 'parametros' ? 'active' : ''}`} href="/admin/parametros-adicionales">Servicios Adicionales</a>
          <a class={`nav-item ${active === 'datos-empresa' ? 'active' : ''}`} href="/admin/datos-empresa">Datos de Empresa</a>
        </nav>
        <div class="bottom-actions">
          <a class="nav-item" href="/" target="_blank" rel="noopener noreferrer"> Ver sitio web</a>
          <button class="nav-item" id="logoutBtn"> Cerrar sesi贸n</button>
        </div>
      </aside>
      <main class="content">
        <slot />
      </main>
    </div>

    <script>
      import { checkAuthOnLoad, setupGlobalAuthInterceptor, setupAutoTokenRefresh } from '../lib/auth-guard'

      // Esperar a que el DOM est茅 listo antes de verificar auth
      document.addEventListener('DOMContentLoaded', () => {
        // Inicializar protecci贸n de autenticaci贸n
        console.log('[AdminLayout] Inicializando auth guard...')
        checkAuthOnLoad()
        setupGlobalAuthInterceptor()
        
        // Configurar auto-refresh del token
        setupAutoTokenRefresh()
          .then(() => console.log('[AdminLayout] Auto-refresh configurado'))
          .catch(err => console.error('[AdminLayout] Error configurando auto-refresh:', err))

        // Logout functionality
        const logoutBtn = document.getElementById('logoutBtn');
        logoutBtn?.addEventListener('click', () => {
          console.log('[AdminLayout] Cerrando sesi贸n...')
          // Clear all authentication data
          localStorage.removeItem('adminAuth');
          sessionStorage.clear();
          
          // Redirect to login
          window.location.href = '/admin/login';
        });

        // Mobile menu functionality
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');

        function openSidebar() {
          sidebar?.classList.add('active');
          sidebarOverlay?.classList.add('active');
          document.body.style.overflow = 'hidden';
        }

        function closeSidebar() {
          sidebar?.classList.remove('active');
          sidebarOverlay?.classList.remove('active');
          document.body.style.overflow = '';
        }

        mobileMenuBtn?.addEventListener('click', () => {
          if (sidebar?.classList.contains('active')) {
            closeSidebar();
          } else {
            openSidebar();
          }
        });

        sidebarOverlay?.addEventListener('click', closeSidebar);

        // Cerrar sidebar al hacer clic en un enlace (m贸vil)
        const navItems = sidebar?.querySelectorAll('.nav-item');
        navItems?.forEach(item => {
          item.addEventListener('click', () => {
            if (window.innerWidth <= 900) {
              closeSidebar();
            }
          });
        });

        // Cerrar sidebar si se redimensiona a desktop
        window.addEventListener('resize', () => {
          if (window.innerWidth > 900) {
            closeSidebar();
          }
        });
      })
    </script>
  </body>
</html>
