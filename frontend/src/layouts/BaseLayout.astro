---
import Navbar from '../components/Navbar.astro'
import faviconIco from '../assets/logo_corpmeta.ico'
import logoClub from '../assets/logo_corpmeta.png'

interface Props {
  title?: string
  hideNavbar?: boolean
  fullWidth?: boolean
  theme?: 'light' | 'dark'
}

const {
  title = 'Corporación Club del Meta',
  hideNavbar = false,
  fullWidth = false,
  theme = 'light'
} = Astro.props as Props

// Obtener número de WhatsApp desde la base de datos
 
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href={faviconIco} />
    <meta
      name="description"
      content="Portal del Club El Meta para reservar salones y espacios exclusivos."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        color-scheme: light;
        --color-primary: #0a4ba5;
        --color-secondary: #bfc3c7;
        --color-accent: #c57d3d;
        --color-background: #f4f6f9;
        --color-surface: #ffffff;
        --color-text: #1f2933;
      }

      *, *::before, *::after {
        box-sizing: border-box;
      }

      .layout {
        margin: 0;
        font-family: 'Poppins', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: var(--color-background);
        color: var(--color-text);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      .main {
        flex: 1;
        width: min(1650px, 95%);
        margin: 0 auto;
        padding: 3rem 0;
      }

      .layout--dark {
        background: #07193a;
      }

      .layout--full .main {
        width: 100%;
        margin: 0;
        padding: 0;
      }

      footer {
        background: #1f2937;
        color: #f9fafb;
        padding: 3rem 2rem 2rem;
        font-size: 0.9rem;
      }

      .footer-container {
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 3rem;
        text-align: left;
      }

      .footer-section h3 {
        font-size: 1.25rem;
        margin: 0 0 1rem;
        font-weight: 600;
        color: #ffffff;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .footer-section p {
        margin: 0.5rem 0;
        line-height: 1.7;
        color: #d1d5db;
      }

      .footer-section a {
        color: #93c5fd;
        text-decoration: none;
        transition: color 0.2s ease;
      }

      .footer-section a:hover {
        color: #60a5fa;
      }

      .social-icons {
        display: flex;
        gap: 0.85rem;
        margin-top: 1rem;
      }

      .social-icons a {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: transform 0.2s ease, background 0.2s ease;
      }

      .social-icons a:hover {
        transform: translateY(-3px);
      }

      .social-icons .facebook {
        background: #3b5998;
      }

      .social-icons .facebook:hover {
        background: #2d4373;
      }

      .social-icons .google {
        background: #dd4b39;
      }

      .social-icons .google:hover {
        background: #c23321;
      }

      .social-icons .flickr {
        background: #ff0084;
      }

      .social-icons .flickr:hover {
        background: #cc006a;
      }

      .footer-copyright {
        text-align: center;
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        font-size: 0.875rem;
        color: #9ca3af;
      }

      

      @media (max-width: 768px) {
        footer {
          padding: 2.5rem 1.5rem 1.5rem;
        }

        .footer-container {
          grid-template-columns: 1fr;
          gap: 2rem;
          text-align: center;
        }

        .social-icons {
          justify-content: center;
        }

        
      }

      a {
        color: inherit;
      }
    </style>
  </head>
  <body class={`layout ${fullWidth ? 'layout--full' : ''} ${theme === 'dark' ? 'layout--dark' : ''}`}>
    {!hideNavbar && <Navbar />}
    <main class={fullWidth ? 'main main--full' : 'main'}>
      <slot />
    </main>

    

    <footer class="site-footer">
      <div class="footer-container">
        <!-- Brand Column -->
        <div class="footer-section brand-col">
          <div class="footer-brand">
            <img src={logoClub.src} alt="Club el Meta" class="footer-logo" />
            <div class="footer-brand-text">
              <span class="brand-name">Corporación</span>
              <span class="brand-sub">Club el Meta</span>
            </div>
          </div>
          <p class="brand-description">
            El espacio de encuentro más exclusivo del llano. Gestión de eventos, salones y una comunidad vibrante en el corazón de Villavicencio.
          </p>
        </div>

        <!-- Contact Column -->
        <div class="footer-section">
          <h3>Líneas de Atención</h3>
          <div class="contact-list">
            <p><span>General:</span> (8) 6 64 11 15</p>
            <p><span>WhatsApp:</span> 312 4347893</p>
            <p><span>Eventos:</span> 310 8874473</p>
            <p><span>Operaciones:</span> 313 4660698</p>
          </div>
        </div>

        <!-- Digital Column -->
        <div class="footer-section">
          <h3>Canales Digitales</h3>
          <ul class="digital-links">
            <li><a href="mailto:comunicaciones@clubelmeta.com">comunicaciones@clubelmeta.com</a></li>
            <li><a href="mailto:secretaria@clubelmeta.com">secretaria@clubelmeta.com</a></li>
          </ul>
          <div class="footer-social">
            <a href="#" class="social-btn facebook" aria-label="Facebook">
              <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
            </a>
            <a href="#" class="social-btn google" aria-label="Google">
              <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24"><path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
            </a>
          </div>
        </div>

        <!-- Location Column -->
        <div class="footer-section">
          <h3>Nuestra Sede</h3>
          <p>Calle 48A Carrera 30</p>
          <p>Barrio Ciudad Oriental</p>
          <p>Villavicencio - Meta</p>
        </div>
      </div>

      <div class="footer-base">
        <div class="footer-base-wrap">
          <p class="copyright">© {new Date().getFullYear()} Corporación Club del Meta.</p>
          <div class="footer-dev-credits">
            Desarrollado por 
            <a href="https://portafolio-santiago-duarte.vercel.app/" target="_blank" rel="noopener noreferrer">Santiago Duarte</a> 
            & 
            <span class="dev-name">Sander Sierra</span>
          </div>
        </div>
      </div>
    </footer>

    <style is:global>
      .site-footer {
        background: #020617;
        color: #94a3b8;
        padding: 5rem 0 2rem;
        font-family: 'Poppins', sans-serif;
        border-top: 1px solid rgba(255, 255, 255, 0.03);
      }

      .footer-container {
        max-width: 1300px;
        margin: 0 auto;
        padding: 0 2rem 4rem;
        display: grid;
        grid-template-columns: 1.2fr 1fr 1.2fr 1fr;
        gap: 4rem;
      }

      .footer-section h3 {
        color: #f8fafc;
        font-size: 0.8125rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        margin-bottom: 2rem;
        opacity: 0.9;
      }

      .footer-brand {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
      }

      .footer-logo {
        width: 48px;
        height: auto;
      }

      .footer-brand-text {
        display: flex;
        flex-direction: column;
        line-height: 1.1;
      }

      .brand-name {
        color: #f8fafc;
        font-weight: 700;
        font-size: 1.125rem;
      }

      .brand-sub {
        font-size: 0.75rem;
        color: #64748b;
        font-weight: 500;
        letter-spacing: 0.05em;
      }

      .brand-description {
        font-size: 0.875rem;
        line-height: 1.6;
        color: #64748b;
        max-width: 280px;
      }

      .footer-section p, 
      .footer-section li {
        font-size: 0.9375rem;
        line-height: 1.6;
        margin-bottom: 0.5rem;
      }

      .contact-list span {
        color: #475569;
        font-weight: 600;
        margin-right: 0.5rem;
        font-size: 0.8125rem;
        text-transform: uppercase;
      }

      .digital-links {
        list-style: none;
        padding: 0;
        margin: 0 0 1.5rem;
      }

      .digital-links a {
        color: #94a3b8;
        text-decoration: none;
        transition: color 0.3s ease;
      }

      .digital-links a:hover {
        color: #3b82f6;
      }

      .footer-social {
        display: flex;
        gap: 0.75rem;
      }

      .social-btn {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        color: #94a3b8;
        transition: all 0.3s ease;
      }

      .social-btn:hover {
        background: rgba(59, 130, 246, 0.1);
        border-color: rgba(59, 130, 246, 0.3);
        color: #3b82f6;
        transform: translateY(-3px);
      }

      .footer-base {
        max-width: 1300px;
        margin: 0 auto;
        padding: 2.5rem 2rem 0;
        border-top: 1px solid rgba(255, 255, 255, 0.03);
      }

      .footer-base-wrap {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.75rem;
        color: #475569;
      }

      .copyright {
        margin: 0;
        font-weight: 500;
      }

      .footer-dev-credits {
        margin: 0;
      }

      .footer-dev-credits a {
        color: #64748b;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
      }

      .footer-dev-credits a:hover {
        color: #3b82f6;
      }

      .dev-name {
        color: #64748b;
        font-weight: 600;
      }

      @media (max-width: 1100px) {
        .footer-container {
          grid-template-columns: 1fr 1fr;
          gap: 3rem;
        }
      }

      @media (max-width: 640px) {
        .footer-container {
          grid-template-columns: 1fr;
          gap: 2.5rem;
          text-align: center;
        }

        .footer-brand {
          justify-content: center;
        }

        .brand-description {
          margin: 0 auto;
        }

        .footer-social {
          justify-content: center;
        }

        .footer-base-wrap {
          flex-direction: column;
          gap: 1rem;
          text-align: center;
        }
      }
    </style>
  </body>
</html>
