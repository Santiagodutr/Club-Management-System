      flex-direction: column; 
      width: 100%; 
      gap: 0.5rem;
    }
    :global(.espacio-actions .btn) { 
      width: 100%; 
      justify-content: center;
    }
    :global(.espacio-meta) {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
    .modal-confirm {
      max-width: 90%;
      padding: 1.5rem;
    }
    .modal-confirm__actions {
      flex-direction: column;
    }
    .modal-confirm__actions .btn {
      width: 100%;
    }
    .modal-publicar {
      max-width: 90%;
      padding: 1.5rem;
    }
  }

  @media (max-width: 640px) {
    .panel { padding: 0.75rem; }
    .card { padding: 0.75rem; }
    .panel__header h1 { font-size: 1.25rem; }
    .eyebrow { font-size: 0.75rem; }
    :global(.espacio-card) {
      padding: 0.75rem;
    }
    :global(.espacio-card img) {
      height: 160px;
    }
    :global(.espacio-nombre) {
      font-size: 0.95rem;
    }
    :global(.espacio-meta) {
      font-size: 0.85rem;
    }
    .form-grid {
      gap: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .panel { padding: 0.5rem; }
    .card { padding: 0.5rem; }
    .panel__header h1 { font-size: 1.1rem; }
    .muted { font-size: 0.85rem; }
    .btn { font-size: 0.9rem; padding: 0.6rem 0.85rem; }
    :global(.espacio-card img) {
      height: 140px;
    }
    :global(.espacio-nombre) {
      font-size: 0.9rem;
    }
    .modal-confirm {
      padding: 1rem;
    }
    .modal-confirm__title {
      font-size: 1.25rem;
    }
    .modal-publicar {
      padding: 1rem;
    }
  }
</style>
