  #editorContainer { margin-top: 0.25rem; }

  /* === SECTION HEADERS === */
  .section-header { display: flex; align-items: center; gap: 1rem; padding-bottom: 0.75rem; border-bottom: 1px solid var(--border); margin-bottom: 0.5rem; flex-wrap: wrap; }
  .section-header .eyebrow { margin: 0; }

  /* === SWITCH TOGGLES === */
  .switch-group { display: flex; gap: 2rem; align-items: center; flex-wrap: wrap; }
