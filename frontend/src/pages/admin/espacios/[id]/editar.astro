---
import AdminLayout from '../../../../layouts/AdminLayout.astro'

export const prerender = false

// For static builds we must provide getStaticPaths for dynamic routes.
// The admin dynamic routes are managed client-side / require auth, so
// we return an empty array to skip generating static pages here.
export async function getStaticPaths() {
  return []
}

const { id } = Astro.params
---

<AdminLayout title="Editar Espacio - Club del Meta" active="espacios">
  <section class="panel">
    <header class="panel__header">
      <div>
        <p class="eyebrow">Editar Salón</p>
        <h1 id="pageTitle">Cargando...</h1>
        <p class="muted">Modifica la información del salón de eventos.</p>
      </div>
      <div class="actions">
        <a href="/admin/espacios" class="btn ghost">← Volver</a>
      </div>
    </header>

    <section class="card">
      <form id="espacioForm" class="form-grid">
        <!-- Galería -->
        <div class="wide images-section">
          <div class="images-header">
            <div>
              <p class="eyebrow">Galería</p>
              <h3>Imágenes del salón</h3>
            </div>
            <div class="upload-actions">
              <input type="file" id="fileInput" accept="image/*" multiple hidden />
              <button type="button" id="btnSubirArchivo" class="btn secondary">Subir Imágenes</button>
            </div>
          </div>
          
          <div id="imagenesContainer" class="imagenes-grid">
          </div>

          <div id="uploadProgress" class="upload-progress" style="display: none;">
            <div class="progress-bar">
              <div id="progressBar" class="progress-fill"></div>
            </div>
            <p id="progressText">Subiendo...</p>
          </div>
        </div>

        <!-- Información básica -->
        <div class="wide section-header">
          <p class="eyebrow">Información Básica</p>
        </div>
        <label class="wide">
          Nombre del salón *
          <input id="nombre" type="text" placeholder="Ej: Mi Llanura" required />
        </label>

        <label class="wide">
          Slug (URL)
          <input id="slug" type="text" placeholder="mi-llanura" />
          <small class="hint">Se genera automáticamente desde el nombre</small>
        </label>

        <label class="wide">
          Subtítulo
          <input id="subtitulo" type="text" placeholder="Texto corto descriptivo" />
        </label>

        <label>
          Capacidad máxima
          <input id="capacidadMaxima" type="number" min="1" placeholder="100" />
        </label>

        <label>
          Área (m²)
          <input id="areaM2" type="number" step="0.01" min="0" placeholder="150.50" />
        </label>

        <div class="wide switch-group">
          <label class="switch">
            <input type="checkbox" id="destacado" />
            <span>Salón destacado</span>
          </label>

          <label class="switch">
            <input type="checkbox" id="activo" checked />
            <span>Salón activo</span>
          </label>
        </div>

        <!-- Descripción -->
        <div class="wide section-header">
          <p class="eyebrow">Descripción Completa</p>
        </div>

        <div class="wide">
          <label>
            Descripción
            <textarea id="markdownEditor" rows="10"></textarea>
          </label>
        </div>

        <!-- Características y Servicios -->
        <div class="wide section-header">
          <p class="eyebrow">Características y Servicios</p>
        </div>

        <div class="tags-section">
          <label>
            Características
            <button id="btnAgregarCaracteristica" type="button" class="btn secondary small">+ Agregar</button>
          </label>
          <div id="caracteristicasList" class="tags-list">
            <p class="placeholder-text">No hay características agregadas</p>
          </div>
        </div>

        <div class="tags-section">
          <label>
            Servicios incluidos
            <button id="btnAgregarServicio" type="button" class="btn secondary small">+ Agregar</button>
          </label>
          <div id="serviciosList" class="tags-list">
            <p class="placeholder-text">No hay servicios agregados</p>
          </div>
        </div>

        <!-- Disposiciones -->
        <div class="wide section-header">
          <div style="flex: 1;">
            <p class="eyebrow">Configuración de Disposiciones</p>
          </div>
          <button id="btnAgregarDisposicion" type="button" class="btn secondary">+ Agregar Disposición</button>
        </div>

        <div class="wide">
          <div id="disposicionesList" class="disposiciones-list">
            <div class="placeholder">No hay disposiciones configuradas</div>
          </div>
        </div>

        <!-- Popup de disposición (inline) -->
        <div id="popupDisposicion" class="popup-disposicion" style="display: none;">
          <div class="popup-content">
            <h4>Nueva Disposición</h4>
            <label>
              Tipo de disposición
              <select id="selectDisposicion">
                <option value="">Seleccionar...</option>
              </select>
            </label>
            <label>
              Capacidad
              <input id="inputCapacidad" type="number" min="1" placeholder="Ej: 50" />
            </label>

            <div class="popup-actions">
              <button id="btnCancelarDisposicion" type="button" class="btn ghost">Cancelar</button>
              <button id="btnConfirmarDisposicion" type="button" class="btn primary">Agregar</button>
            </div>
          </div>
        </div>

        <!-- Acciones del formulario -->
        <div class="wide form-actions">
          <a href="/admin/espacios" class="btn ghost">Cancelar</a>
          <button type="submit" class="btn primary">Guardar cambios</button>
        </div>
      </form>
    </section>
  </section>

  <!-- Modal de Tarifas -->
  <div id="modalTarifas" class="modal-overlay" style="display: none;">
    <div class="modal-tarifas">
      <div class="modal-header">
        <h3>Configurar Tarifas</h3>
        <button id="btnCerrarModalTarifas" class="btn-close" type="button">&times;</button>
      </div>
      
      <div class="modal-body">
        <div class="tariff-card">
          <div class="tariff-card-header">
            <h4>Socio</h4>
            <span class="badge-socio">Miembro</span>
          </div>
          
          <div class="tariff-grid">
            <label>
              <span class="label-text">4 horas</span>
              <div class="input-with-icon">
                <span class="input-icon">$</span>
                <input id="modalTarifaSocio4h" type="text" class="currency-input" placeholder="0" />
              </div>
            </label>
            <label>
              <span class="label-text">8 horas</span>
              <div class="input-with-icon">
                <span class="input-icon">$</span>
                <input id="modalTarifaSocio8h" type="text" class="currency-input" placeholder="0" />
              </div>
            </label>
          </div>

          <div class="tariff-additional">
            <h5>Horas Adicionales</h5>
            <div class="tariff-grid">
              <label>
                <span class="label-text">Adicional 4h</span>
                <div class="input-with-icon">
                  <span class="input-icon">$</span>
                  <input id="modalAdicionalSocio4h" type="text" class="currency-input" placeholder="0" />
                </div>
              </label>
              <label>
                <span class="label-text">Adicional 8h</span>
                <div class="input-with-icon">
                  <span class="input-icon">$</span>
                  <input id="modalAdicionalSocio8h" type="text" class="currency-input" placeholder="0" />
                </div>
              </label>
            </div>
          </div>
        </div>

        <div class="tariff-card">
          <div class="tariff-card-header">
            <h4>Particular</h4>
            <span class="badge-particular">Externo</span>
          </div>
          
          <div class="tariff-grid">
            <label>
              <span class="label-text">4 horas</span>
              <div class="input-with-icon">
                <span class="input-icon">$</span>
                <input id="modalTarifaParticular4h" type="text" class="currency-input" placeholder="0" />
              </div>
            </label>
            <label>
              <span class="label-text">8 horas</span>
              <div class="input-with-icon">
                <span class="input-icon">$</span>
                <input id="modalTarifaParticular8h" type="text" class="currency-input" placeholder="0" />
              </div>
            </label>
          </div>

          <div class="tariff-additional">
            <h5>Horas Adicionales</h5>
            <div class="tariff-grid">
              <label>
                <span class="label-text">Adicional 4h</span>
                <div class="input-with-icon">
                  <span class="input-icon">$</span>
                  <input id="modalAdicionalParticular4h" type="text" class="currency-input" placeholder="0" />
                </div>
              </label>
              <label>
                <span class="label-text">Adicional 8h</span>
                <div class="input-with-icon">
                  <span class="input-icon">$</span>
                  <input id="modalAdicionalParticular8h" type="text" class="currency-input" placeholder="0" />
                </div>
              </label>
            </div>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <button id="btnCancelarModalTarifas" type="button" class="btn ghost">Cancelar</button>
        <button id="btnGuardarTarifas" type="button" class="btn primary">Guardar Tarifas</button>
      </div>
    </div>
  </div>

  <!-- Toast notifications -->
  <div id="toastContainer" class="toast-container"></div>
</AdminLayout>

