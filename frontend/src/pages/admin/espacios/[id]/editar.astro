  /* === IMAGES === */
  .images-section { border: 1px solid var(--border); border-radius: 12px; padding: 1.5rem; background: var(--surface); }
  .images-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 1.25rem; flex-wrap: wrap; gap: 1rem; }
  .images-header h3 { margin: 0.25rem 0 0; font-size: 1rem; color: var(--text); }
  .upload-actions { display: flex; gap: 0.5rem; flex-wrap: wrap; }
  .imagenes-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 1rem; min-height: 80px; }
  :global(.imagen-item) { position: relative; aspect-ratio: 4/3; border-radius: 10px; overflow: hidden; border: 2px solid var(--border); background: var(--surface-hover); transition: all 0.25s ease; }
  :global(.imagen-item:hover) { border-color: var(--primary); transform: translateY(-3px); box-shadow: 0 8px 24px rgba(59,130,246,0.18); }
