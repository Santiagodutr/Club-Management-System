---
import AdminLayout from '../../layouts/AdminLayout.astro'

export const prerender = false
---

<AdminLayout title="Eventos - Club del Meta" active="eventos">
  <section class="panel">
    <header class="panel__header">
      <div>
        <p class="eyebrow">Administración</p>
        <h1>Eventos</h1>
        <p class="muted">Gestiona los eventos que aparecen en la página pública. Puedes crear, editar y eliminar eventos con imágenes.</p>
      </div>
      <div class="actions">
        <button id="btnNuevoEvento" class="btn primary">+ Nuevo Evento</button>
      </div>
    </header>

    <!-- Filtros -->
    <section class="card filters-card">
      <div class="filters">
        <label class="filter-item">
          <span class="filter-label">Salón</span>
          <select id="filtroEspacio" class="filter-select">
            <option value="">Todos los salones</option>
          </select>
        </label>
        <div class="filter-stats">
          <span id="totalEventos" class="filter-count">0 eventos</span>
        </div>
      </div>
    </section>

    <!-- Lista de eventos -->
    <section class="card">
      <div id="eventosList" class="posts-list">
        <div class="placeholder">Cargando eventos...</div>
      </div>
      
      <!-- Paginación -->
      <div id="paginationContainer"></div>
    </section>
  </section>

  <!-- Modal de confirmación para eliminar -->
  <div id="confirmModal" class="modal-overlay hidden">
    <div class="modal-confirm">
      <div class="modal-confirm__icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="15" y1="9" x2="9" y2="15"></line>
          <line x1="9" y1="9" x2="15" y2="15"></line>
        </svg>
      </div>
      <h3 class="modal-confirm__title">¿Eliminar evento?</h3>
      <p class="modal-confirm__message">Esta acción no se puede deshacer. El evento será eliminado permanentemente.</p>
      <div class="modal-confirm__actions">
        <button id="btnCancelarEliminar" class="btn ghost">Cancelar</button>
        <button id="btnConfirmarEliminar" class="btn danger">Eliminar</button>
      </div>
    </div>
  </div>

  <!-- Toast notifications -->
  <div id="toastContainer" class="toast-container"></div>
</AdminLayout>

<script>
import '@scripts/eventos/lista.ts'
</script>

<style>
  /* All base styles come from AdminLayout.astro */
  .panel { width: 100%; max-width: 1200px; }
  .filters-card { margin-bottom: 1rem; padding: 1.25rem 1.75rem; }
  .filters-card .card__header { display: none; }
  .filters { display: flex; gap: 1.5rem; align-items: flex-end; flex-wrap: wrap; }
  .filter-item { display: flex; flex-direction: column; gap: 0.4rem; min-width: 200px; }
  .filter-label { font-size: 0.68rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.06em; color: var(--text-muted); }
  .filter-stats { display: flex; align-items: center; margin-left: auto; }
  .filter-count { font-size: 0.85rem; color: var(--text-muted); font-weight: 600; }
  .posts-list { display: grid; gap: 0.75rem; }

  :global(.post-card) {
    display: grid; grid-template-columns: 100px 1fr auto; gap: 1rem;
    align-items: start; padding: 1rem; border: 1px solid var(--border);
    border-radius: 14px; background: var(--surface); transition: all 0.25s ease;
  }
  :global(.post-card:hover) { background: var(--surface-hover); transform: translateY(-2px); border-color: var(--border-hover); }
  :global(.post-card img) { width: 100px; height: 75px; object-fit: cover; border-radius: 8px; }
  :global(.post-info) { display: grid; gap: 0.5rem; }
  :global(.evento-tag) { display: inline-flex; align-items: center; padding: 0.2rem 0.65rem; border-radius: 6px; font-weight: 700; font-size: 0.75rem; width: fit-content; }
  :global(.salon-tag) { background: rgba(59,130,246,0.1); color: #93c5fd; border: 1px solid rgba(59,130,246,0.2); }
  :global(.post-title) { font-weight: 700; color: var(--text); font-size: 1rem; margin: 0; }
  :global(.post-meta) { display: flex; gap: 0.5rem; align-items: center; flex-wrap: wrap; font-size: 0.82rem; color: var(--text-muted); }
  :global(.post-actions) { display: flex; gap: 0.5rem; align-items: center; flex-wrap: wrap; }
  :global(.post-actions .btn) { font-size: 0.8rem; padding: 0.45rem 0.8rem; cursor: pointer; pointer-events: auto; }

  :global(.imagen-card) { display: grid; grid-template-columns: 100px 1fr auto; gap: 0.75rem; align-items: center; padding: 0.75rem; border: 1px solid var(--border); border-radius: 10px; background: var(--surface); }
  :global(.imagen-card img) { width: 100px; height: 70px; object-fit: cover; border-radius: 6px; }

  /* Large modal override */
  .modal-content {
    position: relative; background: var(--modal-bg); border: 1px solid var(--border);
    border-radius: 20px; max-width: 960px; width: min(960px, 95vw);
    max-height: 90vh; display: flex; flex-direction: column; overflow: hidden;
    box-shadow: 0 50px 100px -20px rgba(0,0,0,0.6);
  }

  .modal-large { max-width: 1200px; }

  .modal-header {
    padding: 1.5rem 1.75rem;
    border-bottom: 1px solid var(--border);
    display: flex; justify-content: space-between; align-items: center;
    background: var(--surface);
  }

  .modal-header h2 { margin: 0; font-size: 1.4rem; color: var(--text); }
  .modal-body { padding: 1.75rem; overflow-y: auto; flex: 1; }
  .modal-footer { padding: 1.25rem 1.75rem; border-top: 1px solid var(--border); display: flex; justify-content: flex-end; gap: 0.75rem; background: var(--surface); }

  /* Images section */
  .images-section { border: 1px solid var(--border); border-radius: 14px; padding: 1.25rem; background: var(--surface); }
  .images-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem; flex-wrap: wrap; gap: 1rem; }
  .images-header h3 { margin: 0; font-size: 1rem; color: var(--text); }
  .imagenes-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(140px, 1fr)); gap: 1rem; margin-bottom: 1rem; }

  :global(.imagen-item) { position: relative; aspect-ratio: 4/3; border-radius: 8px; overflow: hidden; border: 2px solid var(--border); transition: all 0.2s; cursor: pointer; }
  :global(.imagen-item:hover) { border-color: var(--primary); transform: translateY(-2px); }
  :global(.imagen-item img) { width: 100%; height: 100%; object-fit: cover; }
  :global(.imagen-item .imagen-overlay) { position: absolute; inset: 0; background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, transparent 50%); display: flex; flex-direction: column; justify-content: flex-end; padding: 0.5rem; opacity: 0; transition: opacity 0.2s; }
  :global(.imagen-item:hover .imagen-overlay) { opacity: 1; }
  :global(.imagen-item .imagen-actions) { display: flex; gap: 0.25rem; justify-content: flex-end; }
  :global(.imagen-item .btn-icon) { background: rgba(255,255,255,0.9); border: none; padding: 0.4rem; border-radius: 6px; cursor: pointer; font-size: 0.9rem; transition: all 0.2s; }
  :global(.imagen-item .btn-icon.danger) { color: #dc2626; }

  /* Gallery */
  .galeria-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(180px, 1fr)); gap: 1rem; max-height: 60vh; overflow-y: auto; }
  :global(.galeria-item) { position: relative; aspect-ratio: 4/3; border-radius: 8px; overflow: hidden; border: 2px solid transparent; cursor: pointer; transition: all 0.2s; }
  :global(.galeria-item:hover) { border-color: var(--primary); transform: translateY(-2px); }
  :global(.galeria-item.selected) { border-color: #34d399; box-shadow: 0 0 0 3px rgba(52, 197, 94, 0.2); }
  :global(.galeria-item img) { width: 100%; height: 100%; object-fit: cover; }
  :global(.galeria-item .check-icon) { position: absolute; top: 0.5rem; right: 0.5rem; background: #34d399; color: white; border-radius: 50%; width: 24px; height: 24px; display: flex; align-items: center; justify-content: center; font-size: 0.875rem; opacity: 0; transition: opacity 0.2s; }
  :global(.galeria-item.selected .check-icon) { opacity: 1; }

  /* Upload */
  .progress-bar { width: 100%; height: 6px; background: var(--border); border-radius: 99px; overflow: hidden; }
  .progress-fill { height: 100%; background: var(--primary); transition: width 0.3s; border-radius: 99px; }

  /* Pagination */
  .pagination { display: flex; justify-content: center; align-items: center; gap: 0.5rem; margin-top: 2rem; padding: 1rem; flex-wrap: wrap; }
  .pagination-btn { min-width: 40px; height: 40px; padding: 0.5rem 0.75rem; border: 1px solid var(--border); background: var(--surface); color: var(--text); border-radius: 0.5rem; cursor: pointer; transition: all 0.2s; font-weight: 500; display: flex; align-items: center; justify-content: center; font-family: inherit; }
  .pagination-btn:hover:not(:disabled) { background: var(--primary); color: white; border-color: var(--primary); transform: translateY(-1px); }
  .pagination-btn.active { background: var(--primary); color: white; border-color: var(--primary); font-weight: 700; }
  .pagination-btn:disabled { opacity: 0.4; cursor: not-allowed; }
  .pagination-ellipsis { color: var(--text-muted); padding: 0.5rem; user-select: none; }

  /* Toast (override for dark theme) */
  :global(.toast) { background: var(--modal-bg); border: 1px solid var(--border); border-radius: 12px; padding: 1rem 1.25rem; box-shadow: 0 10px 30px rgba(0,0,0,0.3); display: flex; align-items: center; gap: 0.75rem; border-left: 4px solid var(--primary); animation: slideIn 0.3s ease; color: var(--text); }
  :global(.toast.success) { border-left-color: #34d399; }
  :global(.toast.error) { border-left-color: #f87171; }
  :global(.toast.warning) { border-left-color: #fbbf24; }
  :global(.toast-message) { flex: 1; font-size: 0.9rem; }
  :global(.toast-close) { background: none; border: none; color: var(--text-muted); cursor: pointer; font-size: 1.1rem; }
  @keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
  :global(.toast.removing) { animation: slideOut 0.3s ease forwards; }
  @keyframes slideOut { from { transform: translateX(0); opacity: 1; } to { transform: translateX(100%); opacity: 0; } }

  @media (max-width: 900px) {
    :global(.post-card) { grid-template-columns: 1fr; }
    :global(.imagen-card) { grid-template-columns: 1fr; }
    .filters { flex-direction: column; }
    .filter-item { min-width: 0; width: 100%; }
  }
</style>