---
import AdminLayout from '../../../../layouts/AdminLayout.astro'

export const prerender = false
---

<AdminLayout title="Editar Evento - Club del Meta" active="eventos">
  <section class="panel">
    <header class="panel__header">
      <div>
        <p class="eyebrow">Editar Evento</p>
        <h1 id="pageTitle">Editar Evento</h1>
        <p class="muted">Modifica los datos del evento.</p>
      </div>
      <div class="actions">
        <a href="/admin/eventos" class="btn ghost">← Volver</a>
      </div>
    </header>

    <div id="loadingState" class="card">
      <div class="placeholder">Cargando evento...</div>
    </div>

    <section id="eventoForm" class="card" style="display: none;">
      <form class="form-grid">
        <label class="wide">
          Título *
          <input id="eventoTitulo" type="text" placeholder="Título del evento" required />
        </label>
        
        <label class="wide">
          Salón asociado
          <select id="eventoEspacio">
            <option value="">Ninguno</option>
          </select>
        </label>

        <div class="wide">
          <label>
            Contenido (Markdown) *
            <div id="editorContainer"></div>
          </label>
        </div>

        <!-- Gestión de imágenes -->
        <div class="wide images-section">
          <div class="images-header">
            <div>
              <p class="eyebrow">Galería</p>
              <h3>Imágenes del evento</h3>
            </div>
            <div class="upload-actions">
              <input type="file" id="fileInput" accept="image/*" multiple hidden />
              <button type="button" id="btnSubirArchivo" class="btn secondary">Subir Imágenes</button>
              <button type="button" id="btnVerGaleria" class="btn ghost">Ver Galería</button>
            </div>
          </div>
          
          <div id="imagenesContainer" class="imagenes-grid">
            <div class="placeholder">No hay imágenes. Sube archivos para comenzar.</div>
          </div>

          <div id="uploadProgress" class="upload-progress" style="display: none;">
            <div class="progress-bar">
              <div id="progressBar" class="progress-fill"></div>
            </div>
            <p id="progressText">Subiendo...</p>
          </div>
        </div>

        <div class="wide form-actions">
          <a href="/admin/eventos" class="btn ghost">Cancelar</a>
          <button type="submit" class="btn primary">Guardar Cambios</button>
        </div>
      </form>
    </section>
  </section>

  <!-- Toast notifications -->
  <div id="toastContainer" class="toast-container"></div>

  <!-- Modal Galería -->
  <div id="modalGaleria" class="modal-overlay" style="display: none;">
    <div class="modal-content galeria-modal">
      <div class="modal-header">
        <h3>Galería de Imágenes</h3>
        <button id="btnCerrarGaleria" class="btn-close">×</button>
      </div>
      <div class="modal-body">
        <div id="galeriaLoading" class="placeholder">Cargando imágenes...</div>
        <div id="galeriaGrid" class="galeria-grid" style="display: none;"></div>
      </div>
      <div class="modal-footer">
        <button id="btnAgregarSeleccionadas" class="btn primary">Agregar Seleccionadas</button>
        <button id="btnCancelarGaleria" class="btn ghost">Cancelar</button>
      </div>
    </div>
  </div>
</AdminLayout>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.css">
<link rel="stylesheet" href="/styles/easymde-custom.css">
<script async src="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.js"></script>
<script>
import '@scripts/eventos/editar.ts'
</script>

<style>
  /* === FORM LAYOUT === */
  .panel { width: 100%; max-width: 1200px; box-sizing: border-box; }
  .form-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 1.25rem; }
  .wide { grid-column: 1 / -1; }
  #editorContainer { margin-top: 0.25rem; }

  /* === FORM ACTIONS === */
  .switch { display: inline-flex; align-items: center; gap: 0.5rem; font-size: 0.9rem; color: var(--text-muted); cursor: pointer; }
  .switch input { width: 18px; height: 18px; cursor: pointer; accent-color: var(--primary); }
  .form-actions { display: flex; gap: 1rem; justify-content: flex-end; padding-top: 0.5rem; border-top: 1px solid var(--border); margin-top: 0.5rem; }

  /* === IMAGES === */
  .images-section { border: 1px solid var(--border); border-radius: 12px; padding: 1.25rem; background: var(--surface); }
  .images-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem; flex-wrap: wrap; gap: 1rem; }
  .images-header h3 { margin: 0; font-size: 1rem; color: var(--text); }
  .upload-actions { display: flex; gap: 0.5rem; flex-wrap: wrap; }
  .upload-actions .btn { padding: 0.5rem 0.85rem; font-size: 0.875rem; font-weight: 600; }
  .imagenes-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(135px, 1fr)); gap: 1rem; margin-bottom: 1rem; }

  :global(.imagen-item) { position: relative; aspect-ratio: 4/3; border-radius: 8px; overflow: hidden; border: 2px solid var(--border); background: var(--surface-hover); transition: all 0.2s; }
  :global(.imagen-item:hover) { border-color: var(--primary); transform: translateY(-2px); box-shadow: 0 4px 14px rgba(59,130,246,0.2); }
  :global(.imagen-item img) { width: 100%; height: 100%; object-fit: cover; }
  :global(.imagen-item .imagen-overlay) { position: absolute; inset: 0; background: linear-gradient(to top, rgba(2,6,23,0.75) 0%, transparent 50%); display: flex; flex-direction: column; justify-content: flex-end; padding: 0.5rem; opacity: 0; transition: opacity 0.2s; }
  :global(.imagen-item:hover .imagen-overlay) { opacity: 1; }
  :global(.imagen-item .imagen-actions) { display: flex; gap: 0.25rem; justify-content: flex-end; }
  :global(.imagen-item .btn-icon) { background: rgba(255,255,255,0.15); border: none; padding: 0.4rem 0.6rem; border-radius: 6px; cursor: pointer; font-size: 0.85rem; transition: all 0.2s; font-weight: 600; color: white; backdrop-filter: blur(4px); }
  :global(.imagen-item .btn-icon:hover) { background: rgba(255,255,255,0.3); transform: scale(1.05); }
  :global(.imagen-item .btn-icon.danger) { color: #fca5a5; }
  :global(.imagen-item input) { position: absolute; top: 0.5rem; left: 0.5rem; right: 0.5rem; font-size: 0.75rem; padding: 0.25rem 0.5rem; background: rgba(2,6,23,0.8); border: 1px solid var(--border); border-radius: 4px; color: white; }

  .upload-progress { margin-top: 1rem; }
  .progress-bar { width: 100%; height: 8px; background: var(--surface-hover); border-radius: 4px; overflow: hidden; }
  .progress-fill { height: 100%; background: var(--primary); transition: width 0.3s; border-radius: 4px; }
  .upload-progress p { margin: 0.5rem 0 0; font-size: 0.875rem; color: var(--text-muted); text-align: center; }

  /* === GALERÍA MODAL === */
  .modal-overlay { position: fixed; inset: 0; background: rgba(2,6,23,0.8); backdrop-filter: blur(8px); display: flex; align-items: center; justify-content: center; z-index: 2000; padding: 1.5rem; }
  .modal-content { background: var(--modal-bg); border: 1px solid var(--card-border); border-radius: 14px; width: 90%; overflow: hidden; box-shadow: 0 25px 60px rgba(0,0,0,0.5); }
  .galeria-modal { max-width: 900px; max-height: 80vh; display: flex; flex-direction: column; }
  .modal-header { display: flex; justify-content: space-between; align-items: center; padding: 1.5rem; border-bottom: 1px solid var(--border); }
  .modal-header h3 { margin: 0; color: var(--text); }
  .modal-body { padding: 1.5rem; overflow-y: auto; flex: 1; }
  .modal-footer { padding: 1.5rem; border-top: 1px solid var(--border); display: flex; justify-content: flex-end; gap: 0.75rem; background: var(--surface); }
  .galeria-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(135px, 1fr)); gap: 1rem; }
  :global(.galeria-item) { position: relative; border-radius: 8px; overflow: hidden; cursor: pointer; border: 2px solid var(--border); transition: all 0.2s; }
  :global(.galeria-item:hover) { border-color: var(--primary); transform: translateY(-2px); }
  :global(.galeria-item.selected) { border-color: #34d399; border-width: 3px; }
  :global(.galeria-item img) { width: 100%; height: 130px; object-fit: cover; display: block; }
  :global(.galeria-item .check-mark) { position: absolute; top: 7px; right: 7px; width: 22px; height: 22px; background: var(--primary); border-radius: 50%; display: none; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 0.8rem; }
  :global(.galeria-item.selected .check-mark) { display: flex; }
  :global(.galeria-item .image-name) { position: absolute; bottom: 0; left: 0; right: 0; background: linear-gradient(to top, rgba(2,6,23,0.8), transparent); color: white; padding: 0.4rem; font-size: 0.72rem; word-break: break-all; }

  /* === RESPONSIVE === */
  @media (max-width: 900px) {
    .panel__header { flex-direction: column; }
    .form-grid { grid-template-columns: 1fr; }
    .imagenes-grid { grid-template-columns: repeat(auto-fill, minmax(100px, 1fr)); }
    .galeria-grid { grid-template-columns: repeat(auto-fill, minmax(100px, 1fr)); }
  }
</style>