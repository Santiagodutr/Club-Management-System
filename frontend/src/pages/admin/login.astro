---
import BaseLayout from '../../layouts/BaseLayout.astro'
import logoClub from '../../assets/logo_corpmeta.png'
import heroBackground from '../../assets/fondoclub.png'

export const prerender = false
---

<BaseLayout title="Acceso Administrador - Club del Meta" hideNavbar fullWidth theme="dark">
  <section class="login-page">
    <div
      class="hero__background"
      aria-hidden="true"
      style={`background-image: linear-gradient(rgba(2, 6, 23, 0.6), rgba(2, 6, 23, 0.9)), url(${heroBackground.src});`}
    ></div>
    
    <div class="login-container animate-fade-in">
      <div class="login-header">
        <div class="login-brand animate-slide-up" style="animation-delay: 0.1s;">
          <img src={logoClub.src} alt="Logo" class="login-logo" />
        </div>
        <h1 class="animate-slide-up" style="animation-delay: 0.2s;">Panel de <span class="text-accent">Control</span></h1>
        <p class="animate-slide-up" style="animation-delay: 0.3s;">Bienvenido de nuevo. Ingresa tus credenciales para administrar el club.</p>
      </div>

      <form class="login-form animate-slide-up" id="loginForm" style="animation-delay: 0.4s;">
        <div class="form-group">
          <label for="email">Correo electrónico</label>
          <div class="input-wrapper">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <input 
              type="email" 
              id="email" 
              name="email" 
              placeholder="admin@clubelmeta.com"
              required
            />
          </div>
        </div>

        <div class="form-group">
          <label for="password">Contraseña</label>
          <div class="input-wrapper">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
            <input 
              type="password" 
              id="password" 
              name="password" 
              placeholder="••••••••"
              required
            />
            <button type="button" class="toggle-password" aria-label="Mostrar contraseña">
              <svg class="eye-open" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                <circle cx="12" cy="12" r="3"></circle>
              </svg>
              <svg class="eye-closed" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: none;">
                <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                <line x1="1" y1="1" x2="23" y2="23"></line>
              </svg>
            </button>
          </div>
        </div>

        <div class="form-options">
          <label class="checkbox-wrapper">
            <input type="checkbox" id="remember" name="remember" checked />
            <span class="checkmark"></span>
            Recordar sesión
          </label>
        </div>

        <div class="error-message" id="errorMessage" style="display: none;">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
          <span>Credenciales incorrectas.</span>
        </div>

        <button type="submit" class="login-btn">
          <span>Ingresar al Panel</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </button>
      </form>

      <div class="login-footer animate-slide-up" style="animation-delay: 0.5s;">
        <a href="/" class="back-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
          </svg>
          Volver al Inicio
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  import { login } from '../../lib/auth'
  
  const form = document.getElementById('loginForm') as HTMLFormElement;
  const errorMessage = document.getElementById('errorMessage');
  const togglePassword = document.querySelector('.toggle-password');
  const passwordInput = document.getElementById('password') as HTMLInputElement;

  togglePassword?.addEventListener('click', () => {
    const type = passwordInput.type === 'password' ? 'text' : 'password';
    passwordInput.type = type;
    
    const eyeOpen = togglePassword.querySelector('.eye-open') as HTMLElement;
    const eyeClosed = togglePassword.querySelector('.eye-closed') as HTMLElement;
    
    if (type === 'text') {
      eyeOpen.style.display = 'none';
      eyeClosed.style.display = 'block';
    } else {
      eyeOpen.style.display = 'block';
      eyeClosed.style.display = 'none';
    }
  });

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const email = (document.getElementById('email') as HTMLInputElement).value;
    const password = (document.getElementById('password') as HTMLInputElement).value;
    const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    
    if (errorMessage) {
      errorMessage.style.display = 'none';
    }
    
    submitBtn.disabled = true;
    const originalText = submitBtn.innerHTML;
    submitBtn.innerHTML = '<span>Verificando...</span>';
    
    try {
      const { user, session } = await login(email, password);

      if (!session) {
        throw new Error('No se pudo iniciar sesión.');
      }

      localStorage.setItem('adminAuth', JSON.stringify({
        token: session.access_token,
        refresh_token: session.refresh_token,
        user: user,
        expiresAt: session.expires_at,
        isAuthenticated: true,
        loginTime: new Date().toISOString()
      }));
      
      window.location.href = '/admin/panel';
      
    } catch (error) {
      if (errorMessage) {
        const message = error instanceof Error ? error.message : 'Error al iniciar sesión';
        const errorSpan = errorMessage.querySelector('span');
        if (errorSpan) {
          errorSpan.textContent = message;
        }
        errorMessage.style.display = 'flex';
        errorMessage.classList.add('shake');
        setTimeout(() => errorMessage.classList.remove('shake'), 500);
      }
      
      submitBtn.disabled = false;
      submitBtn.innerHTML = originalText;
    }
  });
</script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Outfit:wght@300;400;500;600;700&display=swap');

  .login-page {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    overflow: hidden;
    background: #020617;
    font-family: 'Outfit', sans-serif;
  }

  .hero__background {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    z-index: 1;
    transform: scale(1.1);
    animation: slow-zoom 20s ease-in-out infinite alternate;
  }

  @keyframes slow-zoom {
    from { transform: scale(1.1); }
    to { transform: scale(1.2); }
  }

  .login-container {
    position: relative;
    z-index: 2;
    background: rgba(15, 23, 42, 0.4);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 24px;
    padding: 3rem;
    width: 100%;
    max-width: 460px;
    box-shadow: 0 40px 100px -20px rgba(0, 0, 0, 0.5);
  }

  .login-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .login-brand {
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: center;
  }

  .login-logo {
    width: 72px;
    height: auto;
    filter: drop-shadow(0 0 15px rgba(59, 130, 246, 0.4));
  }

  .login-header h1 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.5rem;
    color: #fff;
    margin: 0 0 0.75rem;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  .text-accent {
    color: #3b82f6;
  }

  .login-header p {
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
    font-size: 1rem;
    font-weight: 300;
    line-height: 1.5;
  }

  .login-form {
    margin-bottom: 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.625rem;
    color: rgba(255, 255, 255, 0.8);
    font-weight: 500;
    font-size: 0.9rem;
  }

  .input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .input-wrapper svg {
    position: absolute;
    left: 1.25rem;
    color: rgba(255, 255, 255, 0.4);
    pointer-events: none;
    transition: color 0.3s ease;
  }

  .input-wrapper input {
    width: 100%;
    padding: 1rem 1.25rem 1rem 3.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 14px;
    font-size: 1rem;
    color: #fff;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-family: inherit;
  }

  .input-wrapper input:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.06);
    border-color: #3b82f6;
    box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.15);
  }

  .input-wrapper input:focus + svg,
  .input-wrapper:focus-within svg {
    color: #3b82f6;
  }

  .input-wrapper input::placeholder {
    color: rgba(255, 255, 255, 0.25);
  }

  .toggle-password {
    position: absolute;
    right: 1.25rem;
    background: none;
    border: none;
    cursor: pointer;
    color: rgba(255, 255, 255, 0.3);
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.3s ease;
  }

  .toggle-password:hover {
    color: #fff;
  }

  .form-options {
    margin-bottom: 1.75rem;
  }

  .checkbox-wrapper {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.875rem;
    cursor: pointer;
    transition: color 0.3s ease;
  }

  .checkbox-wrapper:hover {
    color: rgba(255, 255, 255, 0.8);
  }

  .checkbox-wrapper input {
    width: 18px;
    height: 18px;
    accent-color: #3b82f6;
    cursor: pointer;
  }

  .error-message {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.2);
    border-radius: 12px;
    color: #f87171;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .error-message.shake {
    animation: shake 0.5s cubic-bezier(.36,.07,.19,.97) both;
  }

  @keyframes shake {
    10%, 90% { transform: translate3d(-1px, 0, 0); }
    20%, 80% { transform: translate3d(2px, 0, 0); }
    30%, 50%, 70% { transform: translate3d(-4px, 0, 0); }
    40%, 60% { transform: translate3d(4px, 0, 0); }
  }

  .login-btn {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    background: #3b82f6;
    color: white;
    border: none;
    padding: 1.125rem;
    border-radius: 14px;
    font-size: 1.0625rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    font-family: inherit;
    box-shadow: 0 10px 25px -5px rgba(59, 130, 246, 0.4);
  }

  .login-btn:hover:not(:disabled) {
    background: #2563eb;
    transform: translateY(-3px);
    box-shadow: 0 20px 35px -8px rgba(59, 130, 246, 0.5);
  }

  .login-btn:active:not(:disabled) {
    transform: translateY(-1px);
  }

  .login-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    background: #475569;
    box-shadow: none;
  }

  .login-footer {
    text-align: center;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    padding-top: 1.5rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    color: rgba(255, 255, 255, 0.4);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    padding: 0.5rem 1rem;
    border-radius: 99px;
  }

  .back-link:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.05);
  }

  /* Animations */
  .animate-fade-in {
    opacity: 0;
    animation: fade-in 1s cubic-bezier(0.22, 1, 0.36, 1) forwards;
  }

  .animate-slide-up {
    opacity: 0;
    transform: translateY(20px);
    animation: slide-up 0.8s cubic-bezier(0.22, 1, 0.36, 1) forwards;
  }

  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slide-up {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 480px) {
    .login-container {
      padding: 2rem 1.5rem;
      border-radius: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      background: transparent;
      backdrop-filter: none;
      border: none;
      box-shadow: none;
    }

    .login-page {
      padding: 0;
    }

    .login-header h1 {
      font-size: 2.25rem;
    }
  }
</style>
