---
import AdminLayout from '../../layouts/AdminLayout.astro'

export const prerender = false
---

<AdminLayout title="Socios - Club del Meta" active="socios">
  <section class="panel">
    <header class="panel__header">
      <div>
        <p class="eyebrow">Administración</p>
        <h1>Socios</h1>
        <p class="muted">Gestiona los códigos de socios del club. Los socios obtienen automáticamente descuentos en las tarifas.</p>
      </div>
      <div class="actions">
        <button id="btnNuevoSocio" class="btn primary">+ Nuevo Socio</button>
      </div>
    </header>

    <div class="grid">
      <section class="card">
        <div class="card__header">
          <div>
            <p class="eyebrow">Lista</p>
            <h2>Códigos de Socios</h2>
          </div>
          <div class="stats">
            <span id="totalSocios" class="stat">0 socios</span>
          </div>
        </div>
        <div id="sociosList" class="socios-list">
          <div class="placeholder">Cargando socios...</div>
        </div>
      </section>
    </div>
  </section>

  <!-- Modal para crear/editar socio -->
  <div id="crearModal" class="modal-overlay hidden">
    <div class="modal">
      <div class="modal__header">
        <h3 id="modalTitle">Nuevo Socio</h3>
        <button id="btnCerrarCrear" class="btn-close">✕</button>
      </div>
      <div class="modal__body">
        <form id="formCrearSocio">
          <input type="hidden" id="socioId" />
          <label>
            Código de Socio
            <input 
              type="text" 
              id="inputCodigo" 
              name="codigo" 
              placeholder="Ej: SOC-001, ABC123, etc." 
              required 
              minlength="3"
              maxlength="50"
            />
            <span class="input-hint">Mínimo 3 caracteres, máximo 50</span>
          </label>
          <label class="checkbox-label">
            <input type="checkbox" id="inputActivo" checked />
            <span>Socio activo</span>
          </label>
          <div id="mensajeCrear" class="mensaje hidden"></div>
          <div class="modal__actions">
            <button type="button" id="btnCancelarCrear" class="btn ghost">Cancelar</button>
            <button type="submit" id="btnGuardarSocio" class="btn primary">Crear Socio</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal de confirmación para eliminar -->
  <div id="eliminarModal" class="modal-overlay hidden">
    <div class="modal-confirm">
      <div class="modal-confirm__icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="15" y1="9" x2="9" y2="15"></line>
          <line x1="9" y1="9" x2="15" y2="15"></line>
        </svg>
      </div>
      <h3 class="modal-confirm__title">¿Eliminar socio?</h3>
      <p class="modal-confirm__message">Esta acción no se puede deshacer. El código <strong id="codigoEliminar"></strong> será eliminado permanentemente.</p>
      <div class="modal-confirm__actions">
        <button id="btnCancelarEliminar" class="btn ghost">Cancelar</button>
        <button id="btnConfirmarEliminar" class="btn danger">Eliminar</button>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
import '../../lib/scripts/socios.ts'
</script>

<style is:global>
  .socios-table { width: 100%; border-collapse: collapse; }
  .socios-table th { 
    text-align: left; 
    padding: 0.75rem 1rem; 
    font-size: 0.85rem; 
    color: #6b7280; 
    border-bottom: 2px solid #e5e7eb; 
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .socios-table td { 
    padding: 1rem; 
    border-bottom: 1px solid #f3f4f6; 
    vertical-align: middle;
  }
  .socios-table tbody tr { 
    transition: background-color 0.15s ease;
  }
  .socios-table tbody tr:hover { 
    background: #f9fafb; 
  }
  .socios-table tbody tr:last-child td {
    border-bottom: none;
  }

  .btn-action {
    border-radius: 10px;
    padding: 0.5rem 0.85rem;
    font-size: 0.85rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    display: inline-block;
    white-space: nowrap;
    border: 1px solid;
    font-family: inherit;
  }

  .btn-action.edit {
    background: #eef2ff;
    color: #1d4ed8;
    border-color: #dbeafe;
    box-shadow: 0 4px 10px rgba(37,99,235,0.1);
  }

  .btn-action.edit:hover {
    background: #dbeafe;
    box-shadow: 0 6px 14px rgba(37,99,235,0.15);
    transform: translateY(-1px);
  }

  .btn-action.delete {
    background: #ffffff;
    color: #dc2626;
    border-color: #fecaca;
    box-shadow: 0 4px 10px rgba(220,38,38,0.08);
  }

  .btn-action.delete:hover {
    background: #fef2f2;
    border-color: #dc2626;
    box-shadow: 0 6px 14px rgba(220,38,38,0.12);
    transform: translateY(-1px);
  }
</style>

<style>
  .panel { padding: 2rem; max-width: 1200px; margin: 0 auto 4rem; }
  .panel__header { display: flex; justify-content: space-between; gap: 1rem; align-items: flex-start; }
  .eyebrow { text-transform: uppercase; letter-spacing: 0.08em; font-size: 0.8rem; color: #0a4ba5; margin: 0 0 0.3rem; }
  h1, h2, h3 { margin: 0; color: #0f172a; }
  .muted { color: #4b5563; margin: 0.4rem 0 0; max-width: 640px; }
  .actions { display: flex; gap: 0.5rem; align-items: center; }
  .grid { display: grid; grid-template-columns: 1fr; gap: 1.2rem; margin-top: 1.5rem; }
  .card { background: #ffffff; border: 1px solid #e5e7eb; border-radius: 16px; padding: 1.25rem; box-shadow: 0 10px 30px rgba(15,23,42,0.06); }
  .card__header { display: flex; justify-content: space-between; gap: 1rem; align-items: center; margin-bottom: 1rem; }
  .stats { display: flex; gap: 1rem; }
  .stat { font-size: 0.9rem; color: #6b7280; font-weight: 600; }
  
  .btn { border: none; border-radius: 10px; padding: 0.65rem 1rem; font-weight: 600; cursor: pointer; font: inherit; transition: all 0.15s ease; }
  .btn.primary { background: linear-gradient(135deg, #0a4ba5, #2563eb); color: #fff; box-shadow: 0 10px 20px rgba(37,99,235,0.2); }
  .btn.secondary { background: #eef2ff; color: #1d4ed8; border: 1px solid #dbeafe; }
  .btn.ghost { background: #ffffff; color: #0f172a; border: 1px solid #e5e7eb; }
  .btn.danger { background: #ef4444; color: white; }
  .btn:hover { transform: translateY(-1px); opacity: 0.9; }
  
  .socios-list { min-height: 200px; }
  .placeholder, .error, .empty { text-align: center; padding: 3rem 1rem; color: #9ca3af; }
  .error { color: #ef4444; }
  
  .table-wrapper { overflow-x: auto; }
  .socios-table { width: 100%; border-collapse: collapse; }
  .socios-table th { text-align: left; padding: 0.75rem 1rem; font-size: 0.85rem; color: #6b7280; border-bottom: 2px solid #e5e7eb; font-weight: 600; }
  .socios-table td { padding: 1rem; border-bottom: 1px solid #f3f4f6; }
  .socios-table tr:hover { background: #f9fafb; }
  
  .badge { display: inline-block; padding: 0.25rem 0.75rem; border-radius: 6px; font-size: 0.85rem; font-weight: 600; }
  .badge-success { background: #d1fae5; color: #065f46; }
  .badge-inactive { background: #f3f4f6; color: #6b7280; }
  
  .modal-overlay { position: fixed; inset: 0; background: rgba(0,0,0,0.5); display: flex; align-items: center; justify-content: center; z-index: 1000; }
  .modal-overlay.hidden { display: none; }
  
  .modal { background: white; border-radius: 16px; max-width: 500px; width: 90%; box-shadow: 0 20px 60px rgba(0,0,0,0.3); }
  .modal__header { display: flex; justify-content: space-between; align-items: center; padding: 1.5rem; border-bottom: 1px solid #e5e7eb; }
  .modal__header h3 { margin: 0; }
  .btn-close { background: none; border: none; font-size: 1.5rem; cursor: pointer; color: #6b7280; line-height: 1; padding: 0.25rem; }
  .btn-close:hover { color: #111827; }
  .modal__body { padding: 1.5rem; }
  .modal__actions { display: flex; gap: 0.75rem; justify-content: flex-end; margin-top: 1.5rem; }
  
  label { display: flex; flex-direction: column; gap: 0.5rem; font-weight: 600; color: #374151; }
  input[type="text"], input[type="number"] { padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 10px; font: inherit; }
  input[type="text"]:focus, input[type="number"]:focus { outline: none; border-color: #2563eb; box-shadow: 0 0 0 3px rgba(37,99,235,0.1); }
  .input-hint { font-size: 0.85rem; color: #6b7280; font-weight: 400; }
  
  .checkbox-label { 
    flex-direction: row; 
    align-items: center; 
    gap: 0.5rem;
    font-weight: 500;
    cursor: pointer;
  }
  .checkbox-label input[type="checkbox"] { 
    width: auto; 
    margin: 0;
    cursor: pointer;
  }
  
  .mensaje { padding: 0.75rem 1rem; border-radius: 8px; margin-top: 1rem; font-size: 0.9rem; }
  .mensaje.success { background: #d1fae5; color: #065f46; }
  .mensaje.error { background: #fee2e2; color: #991b1b; }
  .mensaje.hidden { display: none; }
  
  .modal-confirm { background: white; border-radius: 16px; max-width: 440px; width: 90%; padding: 2rem; text-align: center; box-shadow: 0 20px 60px rgba(0,0,0,0.3); }
  .modal-confirm__icon { color: #ef4444; margin: 0 auto 1rem; }
  .modal-confirm__title { margin: 0 0 0.75rem; font-size: 1.25rem; }
  .modal-confirm__message { color: #6b7280; margin: 0 0 1.5rem; }
  .modal-confirm__actions { display: flex; gap: 0.75rem; justify-content: center; }

  @media (max-width: 768px) {
    .panel__header { flex-direction: column; align-items: flex-start; }
    .card__header { flex-direction: column; align-items: flex-start; }
  }
</style>
