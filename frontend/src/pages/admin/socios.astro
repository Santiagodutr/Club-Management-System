---
import AdminLayout from '../../layouts/AdminLayout.astro'

export const prerender = false
---

<AdminLayout title="Socios - Club del Meta" active="socios">
  <section class="panel">
    <header class="panel__header">
      <div>
        <p class="eyebrow">Administración</p>
        <h1>Socios</h1>
        <p class="muted">Gestiona los códigos de socios del club. Los socios obtienen automáticamente descuentos en las tarifas.</p>
      </div>
      <div class="actions">
        <button id="btnNuevoSocio" class="btn primary">+ Nuevo Socio</button>
      </div>
    </header>

    <div class="grid">
      <section class="card">
        <div class="card__header">
          <div>
            <p class="eyebrow">Lista</p>
            <h2>Códigos de Socios</h2>
          </div>
          <div class="stats">
            <span id="totalSocios" class="stat">0 socios</span>
          </div>
        </div>
        <div id="sociosList" class="socios-list">
          <div class="placeholder">Cargando socios...</div>
        </div>
      </section>
    </div>
  </section>

  <!-- Modal para crear/editar socio -->
  <div id="crearModal" class="modal-overlay hidden">
    <div class="modal">
      <div class="modal__header">
        <h3 id="modalTitle">Nuevo Socio</h3>
        <button id="btnCerrarCrear" class="btn-close">✕</button>
      </div>
      <div class="modal__body">
        <form id="formCrearSocio">
          <input type="hidden" id="socioId" />
          <label>
            Código de Socio
            <input 
              type="text" 
              id="inputCodigo" 
              name="codigo" 
              placeholder="Ej: SOC-001, ABC123, etc." 
              required 
              minlength="3"
              maxlength="50"
            />
            <span class="input-hint">Mínimo 3 caracteres, máximo 50</span>
          </label>
          <label class="checkbox-label">
            <input type="checkbox" id="inputActivo" checked />
            <span>Socio activo</span>
          </label>
          <div id="mensajeCrear" class="mensaje hidden"></div>
          <div class="modal__actions">
            <button type="button" id="btnCancelarCrear" class="btn ghost">Cancelar</button>
            <button type="submit" id="btnGuardarSocio" class="btn primary">Crear Socio</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal de confirmación para eliminar -->
  <div id="eliminarModal" class="modal-overlay hidden">
    <div class="modal-confirm">
      <div class="modal-confirm__icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="15" y1="9" x2="9" y2="15"></line>
          <line x1="9" y1="9" x2="15" y2="15"></line>
        </svg>
      </div>
      <h3 class="modal-confirm__title">¿Eliminar socio?</h3>
      <p class="modal-confirm__message">Esta acción no se puede deshacer. El código <strong id="codigoEliminar"></strong> será eliminado permanentemente.</p>
      <div class="modal-confirm__actions">
        <button id="btnCancelarEliminar" class="btn ghost">Cancelar</button>
        <button id="btnConfirmarEliminar" class="btn danger">Eliminar</button>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
import '../../lib/scripts/socios.ts'
</script>

<style>
  /* All base styles come from AdminLayout.astro */
  .panel { width: 100%; max-width: 1200px; }
  .grid { display: grid; grid-template-columns: 1fr; gap: 1.25rem; margin-top: 1.5rem; }
  .socios-list { min-height: 200px; }
  .stats { display: flex; gap: 1rem; }

  .socios-table { width: 100%; border-collapse: collapse; min-width: 600px; }
  .socios-table th {
    text-align: left; padding: 0.85rem 1rem; font-size: 0.68rem;
    color: var(--text-muted); border-bottom: 1px solid var(--table-border);
    font-weight: 700; text-transform: uppercase; letter-spacing: 0.08em;
  }
  .socios-table td { padding: 1rem; border-bottom: 1px solid var(--table-border); vertical-align: middle; color: var(--text); }
  .socios-table tbody tr { transition: background 0.15s ease; }
  .socios-table tbody tr:hover { background: var(--table-hover); }
  .socios-table tbody tr:last-child td { border-bottom: none; }

  .badge-success { background: rgba(52, 211, 153, 0.1); color: #34d399; border: 1px solid rgba(52,211,153,0.2); padding: 0.25rem 0.6rem; border-radius: 99px; font-size: 0.75rem; font-weight: 700; }
  .badge-inactive { background: var(--surface); color: var(--text-muted); border: 1px solid var(--border); padding: 0.25rem 0.6rem; border-radius: 99px; font-size: 0.75rem; font-weight: 700; }

  .table-wrapper { overflow-x: auto; -webkit-overflow-scrolling: touch; }

  @media (max-width: 768px) {
    .socios-table { min-width: 500px; }
    .socios-table th { font-size: 0.65rem; padding: 0.6rem 0.75rem; }
    .socios-table td { padding: 0.75rem; font-size: 0.875rem; }
  }
</style>


