---
export const prerender = false

import BaseLayout from '../layouts/BaseLayout.astro'
import { marked } from 'marked'

// Configurar marked
marked.setOptions({
  breaks: true,
  gfm: true,
})

const API_URL = (import.meta.env.PUBLIC_BACKEND_URL || 'http://localhost:3333').replace(/\/$/, '')

// Obtener posts desde la API
let posts = []

try {
  const postsResponse = await fetch(`${API_URL}/api/salon-posts`)
  const postsResult = await postsResponse.json()
  
  console.log('[EVENTOS DEBUG] Response completo:', JSON.stringify(postsResult, null, 2))
  
  if (postsResult.success && postsResult.data) {
    console.log('[EVENTOS DEBUG] Número de posts:', postsResult.data.length)
    
    posts = postsResult.data.map((post: any) => {
      console.log('[EVENTOS DEBUG] Post:', post.id, 'imagenes:', post.imagenes, 'tipo:', typeof post.imagenes)
      
      // El backend (Lucid ORM) ya devuelve imagenes como array
      let imagenes = post.imagenes || []
      
      // Renderizar todo el contenido markdown para el preview
      const fullContentHtml = marked.parse(post.content || '')
      
      return {
        id: post.id,
        titulo: post.titulo,
        slug: post.slug,
        preview: fullContentHtml,
        content: fullContentHtml,
        imagenes: imagenes,
        publishedAt: post.publishedAt || post.published_at,
        espacioNombre: post.espacio?.nombre || 'Club del Meta'
      }
    })
    
    console.log('[EVENTOS DEBUG] Posts procesados:', posts.length)
  }
} catch (error) {
  console.error('[EVENTOS DEBUG] Error cargando eventos:', error)
}
---

<BaseLayout title="Eventos Realizados - Club del Meta">
  <section class="eventos">
    <header class="eventos__header">
      <div class="eventos__badge">Momentos Memorables</div>
      <h1>
        <span class="title-top">GALERÍA DE</span>
        <span class="title-main">EVENTOS</span>
      </h1>
      <p>
        Revive los momentos más especiales que han tenido lugar en el Club del Meta.
        Cada celebración es una historia de éxito y elegancia que nos enorgullece compartir.
      </p>
    </header>

    <div class="eventos-feed">
      {posts.length > 0 ? (
        posts.map((post, postIndex) => (
          <article class="evento-item" data-post-id={post.id} style={`--item-index: ${postIndex}`}>
            <div class="evento-item__gallery">
              {post.imagenes && post.imagenes.length > 0 ? (
                <div class="evento-item__carousel" data-carousel={`carousel-${post.id}`}>
                  <div class="carousel-container">
                    {post.imagenes.map((img: any, imgIndex: number) => (
                      <div 
                        class={`carousel-slide ${imgIndex === 0 ? 'active' : ''}`}
                        data-slide={imgIndex}
                      >
                        <img 
                          src={img.url} 
                          alt={img.alt || post.titulo} 
                          loading={imgIndex === 0 ? 'eager' : 'lazy'}
                          class="gallery-img"
                        />
                      </div>
                    ))}
                  </div>
                  
                  {post.imagenes.length > 1 && (
                    <>
                      <button class="carousel-btn carousel-btn--prev" aria-label="Anterior">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                          <polyline points="15 18 9 12 15 6"></polyline>
                        </svg>
                      </button>
                      <button class="carousel-btn carousel-btn--next" aria-label="Siguiente">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                          <polyline points="9 18 15 12 9 6"></polyline>
                        </svg>
                      </button>
                    </>
                  )}
                  
                  <div class="carousel-counter">
                    <span class="current">1</span> / <span class="total">{post.imagenes.length}</span>
                  </div>
                </div>
              ) : (
                <div class="evento-item__placeholder">
                  <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    <circle cx="8.5" cy="8.5" r="1.5"></circle>
                    <polyline points="21 15 16 10 5 21"></polyline>
                  </svg>
                </div>
              )}
            </div>

            <div class="evento-item__info">
              <div class="evento-item__meta">
                <span class="evento-item__salon">{post.espacioNombre}</span>
                <time class="evento-item__date" datetime={post.publishedAt}>
                  {(() => {
                    try {
                      const fecha = new Date(post.publishedAt)
                      return fecha.toLocaleDateString('es-CO', { 
                        month: 'short', 
                        day: 'numeric',
                        year: 'numeric'
                      })
                    } catch { return 'Reciente' }
                  })()}
                </time>
              </div>
              
              <h2 class="evento-item__title">{post.titulo}</h2>
              
              <div class="evento-item__content">
                <div class="evento-item__preview" data-preview set:html={post.preview} />
                <div class="evento-item__body collapsible" data-collapsed="true">
                  <div class="collapsible-content" set:html={post.content} />
                </div>
                <button class="ver-mas-btn">
                  <span class="btn-text">Leer relato completo</span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="6 9 12 15 18 9"></polyline>
                  </svg>
                </button>
              </div>
            </div>
          </article>
        ))
      ) : (
        <div class="no-eventos">
          <div class="no-eventos__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
          </div>
          <h3>Próximamente</h3>
          <p>Estamos preparando las historias de nuestros eventos más recientes para compartirlas contigo.</p>
        </div>
      )}
    </div>
  </section>

  <!-- Lightbox Modal -->
  <div class="image-modal" id="imageModal">
    <button class="modal-close">×</button>
    <div class="modal-content">
      <img src="" alt="" class="modal-image" />
    </div>
  </div>
</BaseLayout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Outfit:wght@300;400;600;700&display=swap');

  .eventos {
    padding: 6rem 0;
    background: #fdfdfd;
    min-height: 100vh;
  }

  .eventos__header {
    text-align: center;
    margin-bottom: 6rem;
    padding: 0 2rem;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }

  .eventos__badge {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    background: rgba(10, 75, 165, 0.08);
    color: #0a4ba5;
    border-radius: 99px;
    font-family: 'Outfit', sans-serif;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1.5rem;
  }

  .eventos__header h1 {
    font-family: 'Bebas Neue', sans-serif;
    line-height: 0.9;
    margin-bottom: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .title-top {
    font-size: clamp(2rem, 5vw, 3rem);
    color: #94a3b8;
    letter-spacing: 0.1em;
  }

  .title-main {
    font-size: clamp(4rem, 12vw, 8rem);
    color: #041a4a;
    letter-spacing: 0.02em;
  }

  .eventos__header p {
    font-family: 'Outfit', sans-serif;
    color: #64748b;
    font-size: 1.15rem;
    line-height: 1.7;
    max-width: 700px;
    margin: 0 auto;
  }

  .eventos-feed {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    flex-direction: column;
    gap: 6rem;
  }

  .evento-item {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 4rem;
    align-items: center;
    opacity: 0;
    transform: translateY(40px);
    animation: fadeInUp 0.8s ease-out forwards;
    animation-delay: calc(var(--item-index) * 0.2s);
  }

  .evento-item:nth-child(even) {
    grid-template-columns: 1fr 1.2fr;
  }

  .evento-item:nth-child(even) .evento-item__gallery {
    order: 2;
  }

  .evento-item__gallery {
    position: relative;
    border-radius: 32px;
    overflow: hidden;
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.12);
    aspect-ratio: 4/5;
    background: #f1f5f9;
  }

  .evento-item__carousel {
    height: 100%;
    width: 100%;
    position: relative;
  }

  .carousel-container {
    height: 100%;
    width: 100%;
  }

  .carousel-slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .carousel-slide.active {
    opacity: 1;
    z-index: 1;
  }

  .carousel-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .carousel-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border: none;
    color: #041a4a;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    transition: all 0.3s ease;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .carousel-btn:hover {
    background: #0a4ba5;
    color: white;
    transform: translateY(-50%) scale(1.1);
  }

  .carousel-btn--prev { left: 1.5rem; }
  .carousel-btn--next { right: 1.5rem; }

  .carousel-counter {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 99px;
    font-family: 'Outfit', sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    z-index: 10;
  }

  .evento-item__meta {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .evento-item__salon {
    font-family: 'Outfit', sans-serif;
    color: #0a4ba5;
    font-weight: 700;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .evento-item__date {
    font-family: 'Outfit', sans-serif;
    color: #94a3b8;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .evento-item__title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    color: #041a4a;
    margin: 0 0 2rem;
    line-height: 1;
    letter-spacing: 0.02em;
  }

  .evento-item__preview {
    font-family: 'Outfit', sans-serif;
    font-size: 1.125rem;
    line-height: 1.8;
    color: #64748b;
    margin-bottom: 1.5rem;
  }

  .ver-mas-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: none;
    border: none;
    color: #0a4ba5;
    font-family: 'Outfit', sans-serif;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    padding: 0;
    transition: all 0.3s ease;
  }

  .ver-mas-btn:hover {
    color: #3b82f6;
    gap: 1rem;
  }

  .ver-mas-btn svg {
    transition: transform 0.3s ease;
  }

  .evento-item__body.collapsible[data-collapsed="false"] ~ .ver-mas-btn svg {
    transform: rotate(180deg);
  }

  .collapsible-content {
    font-family: 'Outfit', sans-serif;
    color: #64748b;
    font-size: 1.125rem;
    line-height: 1.8;
  }

  .no-eventos {
    text-align: center;
    padding: 8rem 2rem;
  }

  .no-eventos__icon {
    color: #cbd5e1;
    margin-bottom: 2rem;
  }

  .no-eventos h3 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 3rem;
    color: #041a4a;
    margin-bottom: 1rem;
  }

  .no-eventos p {
    font-family: 'Outfit', sans-serif;
    color: #94a3b8;
    max-width: 400px;
    margin: 0 auto;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 968px) {
    .evento-item, .evento-item:nth-child(even) {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .evento-item__gallery {
      order: 1 !important;
      aspect-ratio: 16/9;
    }

    .evento-item__info {
      order: 2 !important;
    }

    .eventos-feed {
      gap: 8rem;
    }
  }

  @media (max-width: 640px) {
    .eventos {
      padding: 4rem 1.5rem;
    }

    .eventos__header {
      margin-bottom: 4rem;
    }

    .evento-item__title {
      font-size: 3rem;
    }
  }
</style>

<script>
  // Enhanced Carousel Logic
  document.querySelectorAll('.evento-item__carousel').forEach((carousel) => {
    const slides = carousel.querySelectorAll('.carousel-slide');
    const prevBtn = carousel.querySelector('.carousel-btn--prev');
    const nextBtn = carousel.querySelector('.carousel-btn--next');
    const currentSpan = carousel.querySelector('.carousel-counter .current');
    let currentSlide = 0;

    if (slides.length <= 1) return;

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.toggle('active', i === index);
      });
      if (currentSpan) currentSpan.textContent = index + 1;
      currentSlide = index;
    }

    if (prevBtn) {
      prevBtn.addEventListener('click', () => {
        const newIndex = currentSlide === 0 ? slides.length - 1 : currentSlide - 1;
        showSlide(newIndex);
      });
    }

    if (nextBtn) {
      nextBtn.addEventListener('click', () => {
        const newIndex = currentSlide === slides.length - 1 ? 0 : currentSlide + 1;
        showSlide(newIndex);
      });
    }
  });

  // Ver más / Ver menos Refinement
  document.querySelectorAll('.ver-mas-btn').forEach((btn) => {
    btn.addEventListener('click', () => {
      const content = btn.closest('.evento-item__info');
      if (!content) return;
      
      const collapsible = content.querySelector('.collapsible');
      if (!collapsible) return;
      
      const isCollapsed = collapsible.getAttribute('data-collapsed') === 'true';
      collapsible.setAttribute('data-collapsed', (!isCollapsed).toString());
      btn.querySelector('.btn-text').textContent = isCollapsed ? 'Mostrar menos' : 'Leer relato completo';
      
      if (!isCollapsed) {
        collapsible.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }
    });
  });

  // Simple Lightbox
  const modal = document.getElementById('imageModal');
  const modalImg = modal.querySelector('.modal-image');
  const modalClose = modal.querySelector('.modal-close');

  document.querySelectorAll('.gallery-img').forEach(img => {
    img.addEventListener('click', () => {
      modal.classList.add('active');
      modalImg.src = img.src;
      document.body.style.overflow = 'hidden';
    });
  });

  modalClose.addEventListener('click', () => {
    modal.classList.remove('active');
    document.body.style.overflow = '';
  });

  modal.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.classList.remove('active');
      document.body.style.overflow = '';
    }
  });
