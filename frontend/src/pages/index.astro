---
import BaseLayout from '../layouts/BaseLayout.astro'
import logoClub from 'src/assets/logo_corpmeta.png'
import heroBackground from 'src/assets/fondoclub.png'
---

<BaseLayout title="Corporacion Club el Meta" hideNavbar fullWidth theme="dark">
  <section class="hero" aria-labelledby="hero-heading">
    <div
      class="hero__background"
      aria-hidden="true"
      style={`background-image: linear-gradient(rgba(2, 6, 23, 0.4), rgba(2, 6, 23, 0.7)), url(${heroBackground.src});`}
    ></div>
    <div class="hero__overlay" aria-hidden="true"></div>

    <div class="hero__container">
      <header class="hero__nav animate-fade-in">
        <div class="hero__brand">
          <img src={logoClub.src} alt="Logo Corporacion Club el Meta" class="hero__logo" />
          <div class="hero__brand-text">
            <span class="hero__brand-name">Corporación</span>
            <span class="hero__brand-sub">Club el Meta</span>
          </div>
        </div>
        <a href="/admin/login" class="hero__admin-link" title="Acceso Administrador">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            <path d="M9 12l2 2 4-4"></path>
          </svg>
          Portal Admin
        </a>
      </header>

      <div class="hero__main">
        <div class="hero__badge animate-slide-up" style="animation-delay: 0.2s;">
          <span class="badge-dot"></span>
          Reserva tu espacio exclusivo
        </div>
        
        <h1 id="hero-heading" class="hero__title">
          <span class="hero__title-line animate-slide-up" style="animation-delay: 0.4s;">
            EL LUGAR <span class="text-accent">PERFECTO</span>
          </span>
          <span class="hero__title-line animate-slide-up" style="animation-delay: 0.6s;">
            para tu evento
          </span>
        </h1>

        <p class="hero__description animate-slide-up" style="animation-delay: 0.8s;">
          Gestione y obtenga cotizaciones de salones exclusivos en segundos. 
          Experimente la elegancia y el confort de la mejor comunidad del Meta.
        </p>

        <div class="hero__actions animate-slide-up" style="animation-delay: 1s;">
          <a class="btn-primary" href="/salones">
            Comenzar Cotización
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
          </a>
          <a class="btn-secondary" href="/eventos">Explorar Eventos</a>
        </div>
      </div>
    </div>
  </section>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Outfit:wght@300;400;500;600;700&display=swap');

    :global(body) {
      font-family: 'Outfit', sans-serif;
      margin: 0;
      overflow-x: hidden;
      background: #020617;
    }

    .hero {
      position: relative;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      color: #f8fafc;
      overflow: hidden;
    }

    .hero__background {
      position: absolute;
      inset: 0;
      background-size: cover;
      background-position: center;
      z-index: -2;
      transform: scale(1.05);
      animation: hero-zoom 20s ease-in-out infinite alternate;
    }

    @keyframes hero-zoom {
      from { transform: scale(1.05); }
      to { transform: scale(1.15); }
    }

    .hero__overlay {
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at center, rgba(2, 6, 23, 0.3) 0%, rgba(2, 6, 23, 0.8) 100%);
      z-index: -1;
    }

    .hero__container {
      position: relative;
      width: min(1400px, 92vw);
      margin: 0 auto;
      flex: 1;
      display: flex;
      flex-direction: column;
      padding: 1.5rem 0;
    }

    .hero__nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1.5rem 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    }

    .hero__brand {
      display: flex;
      align-items: center;
      gap: 1.25rem;
    }

    .hero__logo {
      width: 64px;
      height: auto;
      filter: drop-shadow(0 0 20px rgba(59, 130, 246, 0.3));
    }

    .hero__brand-text {
      display: flex;
      flex-direction: column;
      line-height: 1.1;
    }

    .hero__brand-name {
      font-size: 1.25rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: #fff;
    }

    .hero__brand-sub {
      font-size: 0.875rem;
      font-weight: 500;
      color: rgba(255, 255, 255, 0.6);
      letter-spacing: 0.05em;
    }

    .hero__admin-link {
      display: flex;
      align-items: center;
      gap: 0.625rem;
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.1);
      padding: 0.625rem 1.25rem;
      border-radius: 99px;
      font-size: 0.875rem;
      font-weight: 600;
      color: #fff;
      text-decoration: none;
      backdrop-filter: blur(12px);
      transition: all 0.3s ease;
    }

    .hero__admin-link:hover {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }

    .hero__main {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      max-width: 800px;
      padding: 4rem 0;
    }

    .hero__badge {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      background: rgba(59, 130, 246, 0.1);
      border: 1px solid rgba(59, 130, 246, 0.2);
      padding: 0.5rem 1.25rem;
      border-radius: 99px;
      font-size: 0.8125rem;
      font-weight: 600;
      color: #60a5fa;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      margin-bottom: 2rem;
      width: fit-content;
    }

    .badge-dot {
      width: 6px;
      height: 6px;
      background: #60a5fa;
      border-radius: 50%;
      box-shadow: 0 0 10px #60a5fa;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0% { opacity: 1; transform: scale(1); }
      50% { opacity: 0.5; transform: scale(1.2); }
      100% { opacity: 1; transform: scale(1); }
    }

    .hero__title {
      font-family: 'Bebas Neue', sans-serif;
      font-size: clamp(3.5rem, 8vw, 6.5rem);
      line-height: 0.95;
      margin: 0 0 1.5rem;
      text-transform: uppercase;
      letter-spacing: -0.01em;
    }

    .hero__title-line {
      display: block;
    }

    .text-accent {
      color: #3b82f6;
      -webkit-text-stroke: 1px rgba(255, 255, 255, 0.1);
    }

    .hero__description {
      font-size: clamp(1.125rem, 2vw, 1.375rem);
      line-height: 1.6;
      color: rgba(248, 250, 252, 0.8);
      margin-bottom: 3rem;
      max-width: 600px;
      font-weight: 300;
    }

    .hero__actions {
      display: flex;
      gap: 1.5rem;
      flex-wrap: wrap;
    }

    .btn-primary {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      background: #3b82f6;
      color: #fff;
      padding: 1.125rem 2.25rem;
      border-radius: 12px;
      font-weight: 600;
      text-decoration: none;
      font-size: 1.0625rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 10px 30px -5px rgba(59, 130, 246, 0.4);
    }

    .btn-primary:hover {
      background: #2563eb;
      transform: translateY(-4px) scale(1.02);
      box-shadow: 0 20px 40px -10px rgba(59, 130, 246, 0.6);
    }

    .btn-secondary {
      display: inline-flex;
      align-items: center;
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.1);
      color: #fff;
      padding: 1.125rem 2.25rem;
      border-radius: 12px;
      font-weight: 600;
      text-decoration: none;
      font-size: 1.0625rem;
      backdrop-filter: blur(12px);
      transition: all 0.3s ease;
    }

    .btn-secondary:hover {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }

    /* Animations */
    .animate-fade-in {
      animation: fade-in 1s ease-out forwards;
    }

    .animate-slide-up {
      opacity: 0;
      animation: slide-up 0.8s cubic-bezier(0.22, 1, 0.36, 1) forwards;
    }

    @keyframes fade-in {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @keyframes slide-up {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @media (max-width: 768px) {
      .hero__nav {
        padding: 1rem 0;
      }
      
      .hero__brand-text {
        display: none;
      }

      .hero__main {
        padding: 2rem 0;
        text-align: center;
        align-items: center;
      }

      .hero__actions {
        justify-content: center;
        width: 100%;
      }

      .btn-primary, .btn-secondary {
        width: 100%;
        justify-content: center;
      }
    }
  </style>
</BaseLayout>
